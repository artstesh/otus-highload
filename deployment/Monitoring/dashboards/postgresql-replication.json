{
  "dashboard": {
    "id": null,
    "title": "PostgreSQL Replication Monitoring",
    "tags": ["postgresql", "replication"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Replication Status",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_replication_is_replica",
            "legendFormat": "Is Replica"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Replication Lag (Bytes)",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_replication_lag",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "Tuples Inserted",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_tup_inserted{datname=\"postgres\"}",
            "legendFormat": "Inserted Tuples"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "title": "Database Size",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"postgres\"}",
            "legendFormat": "DB Size"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"postgres\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Replication Slots Status",
        "type": "table",
        "targets": [
          {
            "expr": "pg_replication_slots_active",
            "legendFormat": "Active Slots"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
